<div class="container">
  <div class="row">
    <div class="col-md-12">
      <img src="https://media.giphy.com/media/MtWKB3pR7vQeQ/source.gif" alt="" class="img-responsive center-block loading_pic hide">
      <div class="row produnt_content">
        <% @result.keys.each do |product_name| %>
          <div class="col-md-4">
            <section class="panel">
              <div class="pro-img-box text-center" style="margin-top: 15px">
                <img src="http:<%= @result[product_name].last[:image]%>" alt="" style="width: 200px;height: 200px">
              </div>
              <div class="panel-body text-center">
                <h4><%=@result[product_name].last[:title]%></h4>
                <%@result[product_name].each do |item|%>
                  <p class="price">
                    <%=show_product_price_and_link(item)%>
                  </p>
                <%end%>
              </div>
            </section>
          </div>
        <%end%>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $('.query_btn').click(function(){
    $('.produnt_content').hide()
    $('.loading_pic').addClass('show')
  })
</script>